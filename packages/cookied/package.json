{
	"name": "cookied",
	"description": "PostgreSQL-backed authentication for Node.js-based web applications",
	"version": "0.0.1",
	"scripts": {
		"test": "../../dev/test-schema && ./node_modules/.bin/ava && ./node_modules/.bin/tsc --target esnext --moduleResolution node --noEmit tests/*.ts && ./node_modules/.bin/eslint .",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"type": "module",
	"dependencies": {
		"ayy": "^3.0.0",
		"hash-wasm": "^4.11.0",
		"postgres": "^3.4.3"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.5"
	},
	"devDependencies": {
		"ava": "^6.1.1",
		"eslint": "^8.56.0",
		"tsx": "^4.7.1",
		"typescript": "^5.3.3"
	},
	"ava": {
		"extensions": {
			"ts": "commonjs"
		},
		"nodeArguments": [
			"--import=tsx"
		]
	}
}
